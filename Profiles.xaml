        <!--<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" Padding="5">-->
        <ListView ItemsSource="{Binding Instance.Profiles, Mode=OneWay}" SelectedItem="{Binding Instance.CurrentProfile, Mode=TwoWay}">
            <ListView.Resources>
                <!--<Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}"/>
                        <Setter Property="LabelPosition" Value="Collapsed"/>
                    </Style>-->
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ContentControl x:Name="cc">
                        <Grid HorizontalAlignment="Stretch" Height="44">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseEnter">
                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="PointerEntered"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeave">
                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="PointerExited"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Visibility="{Binding TextBlockVisibility, Mode=OneWay}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Margin="5" Visibility="{Binding EditVisibility, Mode=OneWay}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="Edit"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE70F;"/>
                                </Button>
                                <Button Margin="5" Visibility="{Binding SaveVisibility, Mode=OneWay}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="Save"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE74E;"/>
                                </Button>
                                <Button Margin="5" Visibility="{Binding RemoveVisibility, Mode=OneWay}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="Remove"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE74D;"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsEditing}" Value="true">
                            <DataTrigger.Setters>
                                <Setter TargetName="cc" Property="Content">
                                    <Setter.Value>
                                            <Grid HorizontalAlignment="Stretch" Height="44">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox Text="{Binding Name, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                Visibility="{Binding TextBoxVisibility, Mode=OneWay}" x:Name="TBox">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="PreviewKeyDown">
                                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="ConfirmEditByEnter"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBox>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Margin="5" Visibility="{Binding TextBoxVisibility, Mode=OneWay}">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="Click">
                                                                <i:CallMethodAction TargetObject="{Binding}" MethodName="CancelEdit"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                        <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE711;"/>
                                                    </Button>
                                    <!--Tag="{Binding Text,ElementName=TBox, Mode=OneWay}"-->
                                                    <Button Margin="5" Visibility="{Binding TextBoxVisibility, Mode=OneWay}"
                                                            >
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="Click">
                                                                <i:CallMethodAction TargetObject="{Binding}" MethodName="ConfirmEdit"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                        <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE73E;"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--</ScrollViewer>-->
    </StackPanel>
</Page>
