<Controls:MetroWindow x:Class="MonitorControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:MonitorControl"
        mc:Ignorable="d"
        Title="MainWindows"
        SizeToContent="WidthAndHeight"
        WindowStyle="None" 
        ResizeMode="NoResize"
        >
    <Window.DataContext>
        <local:MonitorFn/>
    </Window.DataContext>
    <ListView ItemsSource="{Binding Monitors}" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" Width="Auto" Height="Auto">
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListView.ItemContainerStyle>
        <ListView.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label 
                        Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" 
                        Content="{Binding Description}"/>
                    <Viewbox 
                        Grid.Column="0" Grid.Row="1"
                        Height="20"
                        VerticalAlignment="Center"
                        Stretch="Uniform">
                        <Path Fill="White">
                            <Path.Data>
                                M 245.2 104.95 L 245.2 104.95 c -0.1 0 -0.2 0 -0.3 0 s -0.2 0 -0.3 0 l 0 0 c -77.1 0.4 -139.7 63.2 -139.7 140.4 s 62.6 140 139.8 140.4 l 0 0 c 0.1 0 0.2 0 0.3 0 s 0.2 0 0.3 0 l 0 0 c 77 -0.4 139.7 -63.2 139.7 -140.4 S 322.3 105.35 245.2 104.95 Z M 244.9 343.65 c -54 -0.2 -98 -44.2 -98 -98.3 s 43.9 -98.1 98 -98.3 c 54 0.2 98 44.2 98 98.3 S 299 343.45 244.9 343.65 Z M 224 0.05 h 42.7 v 74.5 H 224 V 0.05 Z M 224 416.15 h 42.7 v 74.5 H 224 V 416.15 Z M 74.4 266.65 H 0 v -42.7 h 74.5 v 42.7 H 74.4 Z M 416.2 224.05 h 74.5 v 42.7 h -74.5 V 224.05 Z M 56.8 86.95 L 87 56.75 l 52.7 52.7 l -30.2 30.2 L 56.8 86.95 Z M 433.8 403.75 l -30.2 30.2 l -52.7 -52.7 l 30.2 -30.2 L 433.8 403.75 Z M 86.9 433.95 l -30.2 -30.2 l 52.7 -52.7 l 30.2 30.2 L 86.9 433.95 Z M 433.8 86.95 l -52.7 52.7 l -30.2 -30.2 l 52.7 -52.7 L 433.8 86.95 Z
                            </Path.Data>
                        </Path>
                    </Viewbox>
                    <Slider 
                        Grid.Column="1" Grid.Row="1" Margin="5"
                        Width="300" Maximum="100" Minimum="0" Value="{Binding Brightness}" Name="Br" Style="{DynamicResource FlatSlider}"/>
                    <Label 
                        Grid.Column="2" Grid.Row="1" 
                        Content="{Binding ElementName=Br, Path=Value}" />
                    <Viewbox 
                        Grid.Column="0" Grid.Row="2"
                        Height="15" 
                        VerticalAlignment="Center"
                        Stretch="Uniform">
                        <Path Fill="White">
                            <Path.Data>
                                M 0 90 c 0 49.626 40.374 90 90 90 s 90 -40.374 90 -90 S 139.626 0 90 0 S 0 40.374 0 90 Z M 90 20 v 140 c -38.598 0 -70 -31.402 -70 -70 S 51.402 20 90 20 Z
                            </Path.Data>
                        </Path>
                    </Viewbox>
                    <Slider  Margin="5" Grid.Column="1" Grid.Row="2"  Width="300" Maximum="100" Minimum="0" Value="{Binding Contrast}" Name="Co" Style="{DynamicResource FlatSlider}"/>
                    <Label  Grid.Column="2" Grid.Row="2"  Content="{Binding ElementName=Co, Path=Value}" />

                    <Viewbox 
                        Grid.Column="3" Grid.Row="0"
                        Height="15" 
                        VerticalAlignment="Center"
                        Stretch="Uniform">
                        <Path Fill="Red">
                            <Path.Data>
                                M 0 90 c 0 49.626 40.374 90 90 90 s 90 -40.374 90 -90 S 139.626 0 90 0 S 0 40.374 0 90 Z
                            </Path.Data>
                        </Path>
                    </Viewbox>
                    <Slider Margin="5"
                        Grid.Column="4"
                        Grid.Row="0"
                        VerticalAlignment="Stretch" Width="300" Maximum="100" Minimum="0" Value="{Binding Red}" Name="Re" Style="{DynamicResource FlatSlider}"/>
                    <Label  Grid.Column="5" Grid.Row="0"  Content="{Binding ElementName=Re, Path=Value}" />

                    <Viewbox 
                        Grid.Column="3" Grid.Row="1"
                        Height="15" 
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        >
                        <Path Fill="Green">
                            <Path.Data>
                                M 0 90 c 0 49.626 40.374 90 90 90 s 90 -40.374 90 -90 S 139.626 0 90 0 S 0 40.374 0 90 Z
                            </Path.Data>
                        </Path>
                    </Viewbox>
                    <Slider Margin="5"
                        Grid.Column="4"
                        Grid.Row="1"
                        VerticalAlignment="Stretch" Width="300" Maximum="100" Minimum="0" Value="{Binding Green}" Name="Gr" Style="{DynamicResource FlatSlider}"/>
                    <Label  Grid.Column="5" Grid.Row="1"  Content="{Binding ElementName=Gr, Path=Value}" />


                    <Viewbox 
                        Grid.Column="3" Grid.Row="2"
                        Height="15" 
                        VerticalAlignment="Center"
                        Stretch="Uniform">
                        <Path Fill="Blue">
                            <Path.Data>
                                M 0 90 c 0 49.626 40.374 90 90 90 s 90 -40.374 90 -90 S 139.626 0 90 0 S 0 40.374 0 90 Z
                            </Path.Data>
                        </Path>
                    </Viewbox>
                    <Slider Margin="5"
                        Grid.Column="4"
                        Grid.Row="2"
                        VerticalAlignment="Stretch" Width="300" Maximum="100" Minimum="0" Value="{Binding Blue}" Name="Bl" Style="{DynamicResource FlatSlider}"/>
                    <Label  Grid.Column="5" Grid.Row="2"  Content="{Binding ElementName=Bl, Path=Value}" />
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Controls:MetroWindow>
