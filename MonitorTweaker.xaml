            </Viewbox>
            <Slider Margin="5" Width="300" Maximum="100" Minimum="0" Value="{x:Bind Monitor.Brightness, Mode=TwoWay}" Name="Br"  />
            <TextBlock Text="{x:Bind Monitor.Brightness, Mode=TwoWay}" />
