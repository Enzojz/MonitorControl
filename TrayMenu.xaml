<Window x:Class="MonitorControl.TrayMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorControl"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="TrayMenu" Height="450" Width="800">
    <ListView>
        <ListView.ItemTemplateSelector>
                <local:PopupMenuDataTemplateSelector>
                <local:PopupMenuDataTemplateSelector.Item>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}" />
                    </DataTemplate>
                </local:PopupMenuDataTemplateSelector.Item>
                <local:PopupMenuDataTemplateSelector.Seperator>
                    <DataTemplate>
                        <TextBlock Text="---"/>
                    </DataTemplate>
                </local:PopupMenuDataTemplateSelector.Seperator>
            </local:PopupMenuDataTemplateSelector>
        </ListView.ItemTemplateSelector>
    </ListView>
</Window>
