                    </Path.Data>
                </Path>
            </Viewbox>
            <Slider Margin="5" Width="300" Maximum="100" Minimum="0" Value="{x:Bind Monitor.Contrast, Mode=TwoWay}" Name="Co" />
            <TextBlock Text="{x:Bind Monitor.Contrast, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Viewbox >
                <Path Fill="#EE4444">
                    <Path.Data>
                        M 0 90 c 0 49.626 40.374 90 90 90 s 90 -40.374 90 -90 S 139.626 0 90 0 S 0 40.374 0 90 Z
                    </Path.Data>
                </Path>
            </Viewbox>
            <Slider Margin="5" Width="300" Maximum="100" Minimum="0" VerticalAlignment="Stretch" Value="{x:Bind Monitor.Red, Mode=TwoWay}" Name="Re" />
            <TextBlock Text="{x:Bind Monitor.Red, Mode=TwoWay}" />
